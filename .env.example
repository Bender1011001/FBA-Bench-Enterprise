# FBA-Bench Enterprise Environment Configuration
# Copy this file to .env and fill in your values.
# Never commit secrets to version control.

# Application
SECRET_KEY=generate_a_secure_random_string_here_for_app_secret  # Generate with: openssl rand -hex 32
DEBUG=True  # Set to False in production
APP_NAME=fba-bench-enterprise
APP_VERSION=0.1.0

# Security & Authentication
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRES_MINUTES=15
REFRESH_TOKEN_EXPIRES_DAYS=7
JWT_SECRET_KEY=generate_a_different_secure_random_string_here_for_jwt_secret  # UNIQUE from SECRET_KEY

# Database
DATABASE_URL=sqlite:///fba_bench.db  # Or postgresql://user:pass@localhost/dbname
SQLALCHEMY_ECHO=False  # Set to True for SQL logging in development

# Redis (for caching, sessions, etc.)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=changeme_in_production  # Required for production deployments

# API & External Services
PUBLIC_APP_BASE_URL=http://localhost:8000  # Base URL for the application
API_V1_STR=/api/v1

# LLM Providers
OPENAI_API_KEY=your-openai-api-key
OPENROUTER_API_KEY=your-openrouter-api-key
GROK_API_KEY=your-grok-api-key  # If using xAI Grok
ANTHROPIC_API_KEY=your-anthropic-api-key  # For Claude

# ClearML (Experiment Tracking)
CLEARML_API_HOST=https://app.clear.ml
CLEARML_WEB_HOST=https://app.clear.ml
CLEARML_ACCESS_KEY=your-clearml-access-key
CLEARML_SECRET_KEY=your-clearml-secret-key

# Stripe (Payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_PORTAL_RETURN_PATH=/billing/portal/return
STRIPE_DEFAULT_PRICE_ID=price_test_default

# Observability & Logging
SENTRY_DSN=your-sentry-dsn  # Optional: https://sentry.io
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Email (SMTP for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@fbabench.com
SMTP_USE_TLS=true

# Website contact form (POST /api/v1/contact)
CONTACT_TO_EMAIL=you@yourdomain.com

# Other Services
CELERY_BROKER_URL=redis://localhost:6379/1  # For task queue
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Development/Testing
TESTING=False
ENVIRONMENT=development  # development, staging, production
