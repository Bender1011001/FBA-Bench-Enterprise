# FBA-Bench Development Environment
ENVIRONMENT=development

# Auth: disabled for dev
AUTH_ENABLED=false
AUTH_TEST_BYPASS=true
AUTH_PROTECT_DOCS=false
AUTH_JWT_ALG=RS256
# AUTH_JWT_PUBLIC_KEY=   # not required in dev when AUTH_ENABLED=false

# CORS allow-list for local dev
FBA_CORS_ALLOW_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

# Global API rate limit
API_RATE_LIMIT=200/minute

# Database (SQLite local)
DATABASE_URL=sqlite+aiosqlite:///./dev.db
DB_AUTO_CREATE=true

# Redis (optional for local dev)
REDIS_PASSWORD=dev_password_change_me
FBA_BENCH_REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0

# Logging
LOG_LEVEL=DEBUG