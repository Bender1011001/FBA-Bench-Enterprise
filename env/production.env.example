# Production environment example
# IMPORTANT: Never commit private keys. Only public key is referenced here.

# --- Auth ---
AUTH_ENABLED=true
AUTH_TEST_BYPASS=false
AUTH_PROTECT_DOCS=true
# RSA public key (PEM). Multi-line allowed or single-line with \n
AUTH_JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----REPLACE_WITH_YOUR_PUBLIC_KEY-----END PUBLIC KEY-----
AUTH_JWT_ALG=RS256
AUTH_JWT_ISSUER=https://auth.example.com/
AUTH_JWT_AUDIENCE=fba-api

# --- CORS ---
# Comma-separated list (no spaces). See [python.function _get_cors_allowed_origins()](fba_bench_api/main.py:103)
FBA_CORS_ALLOW_ORIGINS=https://app.example.com,https://admin.example.com

# --- Rate limiting ---
API_RATE_LIMIT=600/minute

# --- Database ---
# Use managed Postgres (async driver)
DATABASE_URL=postgres+asyncpg://USER:PASS@HOST:5432/DBNAME
DB_AUTO_CREATE=false

# --- Logging ---
LOG_LEVEL=INFO